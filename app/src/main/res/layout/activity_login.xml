<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".com.wixet.pkp.palenciakernelpanic.ProfileFragment"

    android:background="#ffffff">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Usuario"
            android:textColorHint="@color/secondary_text"
            android:textColor="@color/hint_text"
            android:drawableLeft="@drawable/user"/>


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:padding="10dp"
            android:hint="ContraseÃ±a"
            android:textColorHint="@color/hint_text"
            android:password="true"
            android:drawableLeft="@drawable/password"/>

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="@color/secondary_text"
            fbutton:shadowEnabled="false"
            fbutton:cornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear nueva cuenta"
            android:padding="10dp"
            android:textColor="@color/white_opaque"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/login_register" />
    </LinearLayout>



    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/accent_color"
        fbutton:shadowEnabled="false"
        fbutton:cornerRadius="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:padding="10dp"
        android:textColor="@color/white_opaque"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/login_button" />

</RelativeLayout>